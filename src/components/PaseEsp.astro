---
interface Props {
  source?: string;
  alt?: string;
}

const { source = "", alt = "" } = Astro.props as Props;
import VIP from "Public/assets/img/VIP.png";
---

<div class="text-center">
  <div class="relative inline-block">
    <div class="relative size-72 mx-auto mb-4 -mt-4">
      <img
        src={VIP.src}
        alt="Pase VIP"
        class="w-full h-full object-cover rounded-full ring-4 ring-blue-200 shadow-2xl"
      />
      <div
        class="absolute inset-0 rounded-full bg-gradient-to-r from-transparent via-transparent to-blue-500/20"
      >
      </div>
      <div
        class="absolute inset-0 rounded-full bg-gradient-to-b from-transparent via-transparent to-slate-600/20"
      >
      </div>
      <div
        class="absolute inset-0 rounded-full bg-gradient-to-t from-blue-900/30 via-transparent to-transparent"
      >
      </div>
      <div
        class="absolute inset-0 rounded-full ring-1 ring-white/30 shadow-inner"
      >
      </div>
    </div>
  </div>

  <h2 class="text-md font-bold text-slate-800 mb-1 -mt-4">
    Pase Especial
  </h2>

  <div
    class="inline-flex items-center border border-blue-200 text-blue-700 bg-blue-50 px-2 py-1 rounded-full text-sm"
  >
    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
